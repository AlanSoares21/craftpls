@inject ServerConfig config
@model CraftItemsPrice

<div class="row bg-tertiary">
    @if (Model.Item.Asset != null) {
        <div class="col-2">
            <image class="w-75 rounded" src="@config.AssetsUrl/@Model.Item.Asset.Endpoint" />
        </div> 
    } 
    <div class="col-6">
        <h2>@Model.Item.Name</h2>
        <div class="row">
            <div class="col-8">
                @Model.Manufacturer.Server.Name
                <div>
                    @foreach (var accounts in Model.Manufacturer.Server.GameAccounts)
                    {
                        <span class="badge bg-primary">@accounts.Name</span>
                    }
                </div>
            </div>
            <div class="col-4">
                <div>
                    Craft price: @Model.Price
                </div>
                <div>
                    Total price: <b>@Model.TotalPrice</b>
                </div>
            </div>
        </div>
    </div>
    <div class="w-100"></div>
    <div class="col-6">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="5">Craft Resources</th>
                </tr>
                <tr>
                    <th>Icon</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>Price</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var craftResource in Model.Item.Resources)
                {
                    <tr>
                        <td>
                            @if (@craftResource.Resource.Asset != null) {
                                <image 
                                    class="w-100 rounded" 
                                    src="@config.AssetsUrl/@craftResource.Resource.Asset.Endpoint" 
                                />
                            }
                        </td>
                        <td>@craftResource.Resource.Name</td>
                        <td>@craftResource.Resource.Level</td>
                        <td>
                            @if (craftResource.Resource.Prices.Count > 0) {
                                <b>
                                    @craftResource.Resource.Prices.ElementAt(0).TotalPrice
                                </b>
                            }
                        </td>
                        <td>@craftResource.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="w-100">
    </div>
    <div class="col-8">
    </div>
    <div class="col-4">
        @if (User.Identity is not null && User.Identity.IsAuthenticated) {
            <form asp-action="New" method="post">
                <input name="PriceId" value=@Model.Id class="visually-hidden" />
                <input type="submit" class="btn btn-success" value="Request" />
            </form>
        } else {
            <input type="submit" class="btn btn-success" value="Create an account to request a craft" disabled="true" />
        }
    </div>
</div>
