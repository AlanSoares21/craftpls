@using System.Globalization

<li class="nav-item">
    @if (User.Identity is not null && User.Identity.IsAuthenticated) {
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">
            @ViewData["Username"]
        </a>
    } else {
        <a
            class="nav-link text-dark"
            asp-controller="Account" 
            asp-action="OAuth">
            Login with Google
        </a>
    }
</li>